{% extends 'base.html.twig' %}

{% block title %}Bienvenue{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h2>Bienvenue</h2>
        <ul>
            <li>Prenom: {{ user.firstName }}</li>
            <li>Nom: {{ user.lastName|upper }}</li>
            <li>Email: {{ user.email }}</li>
            <li>Date de naissance: {{ user.birthDate|date('d F Y') }}</li>
        </ul>
    </div>
    <div class="example-wrapper">   
        <h3>Vous pouvez modifier vos info perso</h3>
        <div class='container'>
            {{ form(form) }}
        </div>
    </div>
{% endblock %}